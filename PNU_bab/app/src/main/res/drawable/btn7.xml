<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 클릭되지 않은 상태 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFC5E4" /> <!-- 버튼의 배경색을 설정합니다. -->
            <corners android:radius="10dp" /> <!-- 모서리를 10dp만큼 둥글게 설정합니다. -->
            <stroke android:width="0dp" android:color="#00D222" /> <!-- 클릭되지 않은 상태의 테두리 설정 -->
        </shape>
    </item>

    <!-- 클릭된 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 버튼의 배경색을 설정합니다. -->
            <corners android:radius="10dp" /> <!-- 모서리를 10dp만큼 둥글게 설정합니다. -->
            <stroke android:width="5dp" android:color="#00D222" /> <!-- 클릭된 상태의 테두리 설정 -->
        </shape>
    </item>
</selector>

